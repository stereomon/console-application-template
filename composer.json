{
    "name": "stereomon/console-application-template",
    "description": "A Symfony Console application template with DI, testing, and quality tools",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "symfony/console": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/yaml": "^7.0",
        "symfony/framework-bundle": "^7.0"
    },
    "require-dev": {
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^3.2",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin-dir": "bin",
    "scripts": {
        "phpstan": "phpstan analyse -c config/phpstan.neon",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "test": "codecept run",
        "test-unit": "codecept run unit",
        "test-integration": "codecept run integration",
        "quality": [
            "@phpstan",
            "@phpcs",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
